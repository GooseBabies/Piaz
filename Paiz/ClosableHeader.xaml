<UserControl x:Class="Paiz.ClosableHeader"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Paiz"
      mc:Ignorable="d" 
      d:DesignHeight="23" d:DesignWidth="80">
    <Grid x:Name="HeaderGrid" Height="30">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <Button Content="X" Height="20" HorizontalAlignment="Center" Grid.Column="1" Name="button_close" VerticalAlignment="Top" Width="20" FontWeight="Bold" Visibility="Visible" FontSize="14" Padding="0" Margin="0,2,0,0"/>
        <Label Content="TabItem" Height="30" HorizontalAlignment="Left" Grid.Column="0" Name="label_TabTitle" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="12" Margin="0,-4,0,4"/>
    </Grid>
</UserControl>

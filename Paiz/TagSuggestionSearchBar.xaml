<UserControl x:Class="Paiz.TagSuggestionSearchBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Paiz"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="800" GotFocus="UserControl_GotFocus">
    <Grid>
        <TextBox x:Name="SearchBar" Focusable="True" Height="26" VerticalContentAlignment="Center" TextChanged="SearchBar_TextChanged" PreviewKeyUp="SearchBar_PreviewKeyUp" LostKeyboardFocus="SearchBar_LostKeyboardFocus"/> <!-- PreviewKeyDown="SearchBar_PreviewKeyDown" -->
    </Grid>
</UserControl>
